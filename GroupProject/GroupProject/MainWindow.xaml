<Window x:Class="GroupProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="chooseBt" Content="Submit my Choose" HorizontalAlignment="Left" Height="64" Margin="324,210,0,0" VerticalAlignment="Top" Width="123" Click="ChooseBt_Click"/>
        <ListBox x:Name="AnswerLB" HorizontalAlignment="Left" Height="53" Margin="0,165,0,0" VerticalAlignment="Top" Width="267"/>
        <TextBox x:Name="questionTB" HorizontalAlignment="Left" Height="79" Margin="0,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="396"/>
        <Label x:Name="Question" Content="Question" HorizontalAlignment="Left" Margin="0,19,0,0" VerticalAlignment="Top" Width="98"/>
        <Label x:Name="Answer" Content="Answer" HorizontalAlignment="Left" Height="31" Margin="0,134,0,0" VerticalAlignment="Top" Width="72"/>

    </Grid>
</Window>
